@model Blog.UI.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Register">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email">Email Address *</label><br />
                <input asp-for="Email" class="form-control input-text" placeholder="Your email" required />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name *</label><br />
                <input asp-for="Name" class="form-control input-text" placeholder="Your Name" required />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm"></label><br />
                <input asp-for="PasswordConfirm" class="form-control"/>
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="input-submit" value="Register" />
            </div>
        </form>
    </div>
</div>