@model Blog.UI.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Log in</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-controller="Account" asp-action="Login"
                      asp-route-returnUrl="@Model.ReturnUrl">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email">Email Address *</label><br />
                    <input class="form-control input-text" asp-for="Email" placeholder="Your email" required id="email-" />
                    <span class="text-danger field-validation-valid" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">                    
                    <label asp-for="Password">Password *</label><br />
                    <input asp-for="Password" class="form-control input-text" type="password" placeholder="Password" required id="pass" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">Remember me!</label><br />
                        <input asp-for="RememberMe" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login now" class="input-submit" />
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" href="/Identity/Account/ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-controller="Account" asp-action="Register">Register as a new user</a>
                    </p>
                </div>                
            </form>
        </section>
    </div>
</div>