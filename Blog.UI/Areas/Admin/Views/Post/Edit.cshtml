@model Blog.UI.Models.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Edit post";
}
<link href="~/lib/trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Image != null)
        {
            <div>
                <img class="img-responsive img-rounded center-block" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" style="height: 200px" />
            </div>
        }
        else
        {
            <img src="~/images/default/default-user-image.png" alt="" class="img-responsive center-block" style="height: 200px">
        }
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" id="editor" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div id="upload_button">
                    <label>
                        <input name="Image" type="file" class="form-control">                        
                    </label>
                </div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}